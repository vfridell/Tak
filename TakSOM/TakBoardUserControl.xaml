<UserControl x:Class="TakSOM.TakBoardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TakSOM"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel Name="CanvasDockPanel">
        <Canvas Name="MainCanvas" ClipToBounds="True" Width="{Binding ActualWidth, ElementName=CanvasDockPanel}" Height="{Binding ActualHeight, ElementName=CanvasDockPanel}"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Background="Aqua" Margin="0,0,0,0">
            <Canvas.RenderTransform>
                <TransformGroup x:Name="TransformGroup">
                    <ScaleTransform x:Name="ScaleTransform"/>
                    <TranslateTransform x:Name="TranslateTransform"/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
    </DockPanel>
</UserControl>
